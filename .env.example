# ========================================
# ENVIRONMENT
# ========================================
NODE_ENV=development
APP_NAME=Lean SaaS Starter
APP_VERSION=0.1.0

# ========================================
# SUPABASE CONFIGURATION
# ========================================
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_PROJECT_ID=your-project-id

# ========================================
# STRIPE CONFIGURATION
# ========================================
# Development: use sk_test_... keys
# Production: use sk_live_... keys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID=price_your_product_price_id

# ========================================
# RESEND EMAIL CONFIGURATION
# ========================================
RESEND_API_KEY=re_your_resend_api_key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# ========================================
# APP CONFIGURATION
# ========================================
APP_URL=http://localhost:3000

# ========================================
# SECURITY CONFIGURATION
# ========================================
# Production: Use strong, unique secrets
# Development: Default values will be used if not set
JWT_SECRET=your-jwt-secret-at-least-32-characters-long
ENCRYPTION_KEY=your-encryption-key-at-least-32-chars

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# ========================================
# MONITORING & OBSERVABILITY
# ========================================
LOG_LEVEL=info
METRICS_ENABLED=false
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ANALYTICS_ENABLED=false

# ========================================
# DATABASE CONFIGURATION
# ========================================
DATABASE_MAX_CONNECTIONS=10
DATABASE_TIMEOUT=30000

# ========================================
# CACHE CONFIGURATION
# ========================================
CACHE_TTL=300
CACHE_ENABLED=true

# ========================================
# API CONFIGURATION
# ========================================
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# ========================================
# DEVELOPMENT SPECIFIC
# ========================================
DEBUG_MODE=true
HOT_RELOAD=true
MOCK_SERVICES=false

# ========================================
# TEST SPECIFIC
# ========================================
TEST_DATABASE_URL=http://localhost:54321
TEST_TIMEOUT=30000

# ========================================
# PRODUCTION SPECIFIC
# ========================================
HEALTH_CHECK_INTERVAL=30000
BACKUP_ENABLED=true
SSL_REQUIRED=true

# ========================================
# EXAMPLES FOR DIFFERENT ENVIRONMENTS
# ========================================

# Development Example:
# NODE_ENV=development
# APP_URL=http://localhost:3000
# STRIPE_SECRET_KEY=sk_test_...
# LOG_LEVEL=debug
# METRICS_ENABLED=false

# Production Example:
# NODE_ENV=production  
# APP_URL=https://yourdomain.com
# STRIPE_SECRET_KEY=sk_live_...
# LOG_LEVEL=warn
# METRICS_ENABLED=true
# SSL_REQUIRED=true